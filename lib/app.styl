@import 'nib'
@import url('https://fonts.googleapis.com/css?family=Lato:400,300');
html
	margin 0
body 
	background-color #ecf5f5
	color #202020
	margin 0
	padding 0
	font-family: 'Lato', sans-serif;	
h2
	font-size 2em
	font-weight 400
h3
	font-size 1.6em
	font-weight 400
.nav
	color #ecf5f5
	background-color #202020
	position: fixed
	height: 50px
	top 0
	right 0
	left 0
	display flex
	flex-direction row
	justify-content center
	align-items center
	box-shadow 2px 0 3px #202020
	&-lista
		width 680px
		list-style: none
		padding 0
		margin 0
		display flex
		justify-content flex-end
		box-sizing border-box
		padding-right .5em
	&-item
		font-size 1.2em
		margin auto .7em
	&-linkItem
		color #ecf5f5
		text-decoration: none
	&-getcyan
		margin 0
		padding 0
		padding-left .5em
		width 340px
		box-sizing border-box
		font-size 1.7em
		text-align left
	
.header
	height 500px
	background-color #ecf5f5
	color #202020
	margin-top 50px
	padding 40px 0
	display flex
	flex-direction column
	justify-content center
	&-front
		display flex
		justify-content center
		align-items center
		margin 25px 0
		&-logo
			flex 0 0 340px
			text-align center
			margin 0
		&-text
			flex 0 0 340px
			margin 0
			padding 20px
			box-sizing border-box
			text-align center
			font-weight 400
			&-button
				background-color #007e98
				border 0
				color #ecf5f5
				font-family: 'Lato', sans-serif;
				padding .5em
				font-size 1.4em
				border-radius 3px
				cursor: pointer

	&-slogan
		margin 50px 0
		text-align center
		font-weight: 300
		font-size 2.7em
.services
	text-align center
	height 280px
	background-color #029792
	display flex
	flex-direction row
	justify-content center
	&-item
		width:  300px
		background-color #ecf5f5
		margin 20px
		padding 20px
		box-sizing border-box
		border-radius: 3px
		box-shadow: 2px 2px 4px #606060
		font-weight 400
.types
	height 300px
	background-color #029792
	padding-bottom 15px

	&-content
		margin 0 auto
		width 1020px
		height 100%
		display flex
		flex-wrap wrap
		flex-direction row
		justify-content center
		align-items center
	&-titulo
		font-size 1.2em
		font-weight 400
		text-align right
		width 340px
		margin 0 
		padding 0 20px
		box-sizing border-box
	&-parrafo
		width 680px
		margin 0
		padding 0 20px
		box-sizing border-box
.jobs
	height 280px
	background-color #007e98
	&-lista
		text-align center
		height 100%
		display flex
		flex-direction row
		justify-content center
		margin 0
		list-style none
		padding 0
	&-item
		width: 300px
		background-color #ecf5f5
		margin 20px
		border-radius: 3px
		box-shadow: 2px 2px 4px #606060
		display flex
		flex-direction column
		justify-content center
		&-label
			background-color #ecf5f5
			box-shadow: 0px 1px 2px gray
			padding 10px
			&-link
				text-decoration none
				color #202020
	&-item:nth-child(1)
		background-image: url(/static/img/entrevistartedotcom.png)
		background-size: cover
		background-position: 0 0
.contact
	height 560px
	background-color #ecf5f5
	display flex
	flex-direction row
	justify-content center
	align-items center
	&-formulario
		width 510px
		&-label
			font-size 1.3em
			margin .3em
			font-weight 400
		&-input
			width 100%
			background-color white
			border 1px solid #AAA
			border-radius 2px
			font-size 1.1em
			padding 5px
			margin .3em auto
			resize none
		&-item
			margin 5px 50px
	&-redes
		width 510px
		&-lista
			list-style none
			display flex
			flex-direction row
			justify-content center
			&-item
				margin 10px 30px
		&-label
			text-align center
			margin-bottom 1em
		&-parrafo
			font-size 1.3rem
		&-telefono
			text-align center
		
.footer
	height 60px
	background-color #202020
	display flex
	flex-direction column
	justify-content center
	&-parrafo
		font-size .8rem
		margin-left 2em
		color #ecf5f5